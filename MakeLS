project=lsmain
objects=lsmain.o myls.o
cc=gcc
cflags=-Wall -std=c99 -g -pedantic
path=TestPath

exec: $(project)
	./$<
	./$< $(..)

all: $(objects)

$(project): $(objects)
	$(cc) -o $(project) $(objects) $(links)

$(objects): %.o: %.c
	$(cc) -c $(cflags) $< -o $@

.PHONY: clean
clean:
	rm -f $(project) $(objects) *.out *.log *.txt
